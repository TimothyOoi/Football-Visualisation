{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Total Players from the Big 5 European Football Leagues by Country (2021/2022 Season)",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/js/cropped_ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightslategray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/js/cropped_ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/vis_data/total_player_by_nation_with_coords.csv"
            },
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Count",
                    "type": "quantitative",
                    "title": "Number of Players",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            30,
                            120
                        ],
                        "range": [
                            25,
                            50,
                            90,
                            150,
                            250
                        ]
                    }
                },
                "color": {
                    "field": "Count",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            30,
                            120
                        ],
                        "range": [
                            "#fef0d9",
                            "#fdcc8a",
                            "#fc8d59",
                            "#e34a33",
                            "#b30000"
                        ]
                    }
                },
                "opacity": {
                    "value": 0.8
                }
            }
        }
    ]
}