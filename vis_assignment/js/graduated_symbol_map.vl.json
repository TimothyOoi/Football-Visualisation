{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "title": {
        "text": "Geographical Distribution of Players by Nationality"
    },
    "projection": {
        "type": "equalEarth",
        "center": {
            "expr": "center_to"
        },
        "scale": {
            "expr": "zoom_level"
        }
    },
    "params": [
        {
            "name": "zoom_level",
            "value": 150,
            "bind": {
                "input": "range",
                "min": 100,
                "max": 500,
                "step": 10,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [
                0,
                0
            ],
            "bind": {
                "input": "select",
                "options": [
                    [
                        0,
                        0
                    ],
                    [
                        20.939444,
                        6.611111
                    ],
                    [
                        94.443611,
                        51.724722
                    ],
                    [
                        9.254419,
                        50.102223
                    ],
                    [
                        -92.412528,
                        25.30452
                    ],
                    [
                        133.356833,
                        -12.044762
                    ],
                    [
                        -56.096944,
                        -15.595833
                    ],
                    [
                        108.425789,
                        6.810082
                    ]
                ],
                "labels": [
                    "World",
                    "Africa",
                    "Asia",
                    "Europe",
                    "North America",
                    "Oceania",
                    "South America",
                    "South East Asia"
                ],
                "name": "Map Centre: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/week9_hw/js/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "datum.properties.NAME_CIAWF",
                    "as": "country_name"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#d1e2ce",
                "stroke": "#B0B0B0"
            },
            "encoding": {
                "tooltip": {
                    "field": "country_name"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/week9_hw/js/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/week9_hw/js/cropped_ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/vis_assignment/data/total_players_by_nation.csv"
            },
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Count",
                    "type": "quantitative",
                    "title": "Number of Players",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            30,
                            120
                        ],
                        "range": [
                            25,
                            50,
                            90,
                            150,
                            250
                        ]
                    }
                },
                "color": {
                    "field": "Count",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            30,
                            120
                        ],
                        "range": [
                            "#fef0d9",
                            "#fdcc8a",
                            "#fc8d59",
                            "#e34a33",
                            "#b30000"
                        ]
                    },
                    "legend": {
                        "direction": "vertical",
                        "orient": "bottom-left",
                        "fillColor": "white",
                        "strokeColor": "grey",
                        "padding": 5,
                        "symbolType": "circle"
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "stroke": {
                    "value": "#6E6C66"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Continent",
                        "type": "nominal"
                    },
                    {
                        "field": "Count",
                        "type": "quantitative",
                        "title": "No. of Players"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/vis_assignment/data/total_players_by_nation.csv"
            },
            "mark": {
                "type": "text",
                "align": "center",
                "dx": -5,
                "dy": -12,
                "fontSize": 12,
                "opacity": 0.8
            },
            "transform": [
                {
                    "calculate": "parseInt(datum.Count)",
                    "as": "Count"
                },
                {
                    "window": [
                        {
                            "op": "rank",
                            "as": "ranking"
                        }
                    ],
                    "sort": [
                        {
                            "field": "Count",
                            "order": "descending"
                        }
                    ],
                    "groupby": [
                        "Continent"
                    ]
                },
                {
                    "filter": "datum.ranking==1"
                }
            ],
            "encoding": {
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Country"
                }
            }
        }
    ],
    "config": {
        "font": "Roboto",
        "background": "#f0f0f0",
        "padding": 10,
        "arc": {
            "fill": "#30a2da"
        },
        "area": {
            "fill": "#30a2da"
        },
        "axis": {
            "domainColor": "#cbcbcb",
            "grid": true,
            "gridColor": "#cbcbcb",
            "gridWidth": 1,
            "labelColor": "#999",
            "labelFontSize": 10,
            "titleColor": "#333",
            "tickColor": "#cbcbcb",
            "tickSize": 10,
            "titleFontSize": 14,
            "titlePadding": 10,
            "labelPadding": 4
        },
        "axisBand": {
            "grid": false
        },
        "group": {
            "fill": "#f0f0f0"
        },
        "legend": {
            "labelColor": "#333",
            "labelFontSize": 11,
            "padding": 1,
            "symbolSize": 30,
            "symbolType": "square",
            "titleColor": "#333",
            "titleFontSize": 14,
            "titlePadding": 10
        },
        "line": {
            "stroke": "#30a2da",
            "strokeWidth": 2
        },
        "path": {
            "stroke": "#30a2da",
            "strokeWidth": 0.5
        },
        "rect": {
            "fill": "#30a2da"
        },
        "range": {
            "category": [
                "#30a2da",
                "#fc4f30",
                "#e5ae38",
                "#6d904f",
                "#8b8b8b",
                "#b96db8",
                "#ff9e27",
                "#56cc60",
                "#52d2ca",
                "#52689e",
                "#545454",
                "#9fe4f8"
            ],
            "diverging": [
                "#cc0020",
                "#e77866",
                "#f6e7e1",
                "#d6e8ed",
                "#91bfd9",
                "#1d78b5"
            ],
            "heatmap": [
                "#d6e8ed",
                "#cee0e5",
                "#91bfd9",
                "#549cc6",
                "#1d78b5"
            ]
        },
        "point": {
            "filled": true,
            "shape": "circle"
        },
        "shape": {
            "stroke": "#30a2da"
        },
        "bar": {
            "binSpacing": 2,
            "fill": "#30a2da",
            "stroke": null
        },
        "title": {
            "anchor": "start",
            "fontSize": 24,
            "fontWeight": 600,
            "offset": 20
        }
    }
}