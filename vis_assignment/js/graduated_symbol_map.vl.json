{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "title": {
        "text": "Distribution of Players by Nationality (2021/2022 Season)",
        "fontSize": 15
    },
    "projection": {
        "type": "equalEarth",
        "center": {
            "expr": "center_to"
        },
        "scale": {
            "expr": "zoom_level"
        }
    },
    "params": [
        {
            "name": "zoom_level",
            "value": 150,
            "bind": {
                "input": "range",
                "min": 100,
                "max": 500,
                "step": 10,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [
                0,
                0
            ],
            "bind": {
                "input": "select",
                "options": [
                    [
                        0,
                        0
                    ],
                    [
                        20.939444,
                        6.611111
                    ],
                    [
                        94.443611,
                        51.724722
                    ],
                    [
                        9.254419,
                        50.102223
                    ],
                    [
                        -92.412528,
                        25.30452
                    ],
                    [
                        133.356833,
                        -12.044762
                    ],
                    [
                        -56.096944,
                        -15.595833
                    ],
                    [
                        108.425789,
                        6.810082
                    ]
                ],
                "labels": [
                    "World",
                    "Africa",
                    "Asia",
                    "Europe",
                    "North America",
                    "Oceania",
                    "South America",
                    "South East Asia"
                ],
                "name": "Map Centre: "
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/week9_hw/js/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "calculate": "datum.properties.NAME_CIAWF",
                    "as": "country_name"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#EFDD9D",
                "stroke": "#B0B0B0"
            },
            "encoding": {
                "tooltip": {
                    "field": "country_name"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/week9_hw/js/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/week9_hw/js/cropped_ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/vis_data/total_players_by_nation.csv"
            },
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Count",
                    "type": "quantitative",
                    "title": "Number of Players",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            30,
                            120
                        ],
                        "range": [
                            25,
                            50,
                            90,
                            150,
                            250
                        ]
                    }
                },
                "color": {
                    "field": "Count",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            30,
                            120
                        ],
                        "range": [
                            "#fef0d9",
                            "#fdcc8a",
                            "#fc8d59",
                            "#e34a33",
                            "#b30000"
                        ]
                    },
                    "legend": {
                        "direction": "vertical",
                        "orient": "bottom-left",
                        "fillColor": "white",
                        "strokeColor": "grey",
                        "padding": 5
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "stroke": {
                    "value": "#6E6C66"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Continent",
                        "type": "nominal"
                    },
                    {
                        "field": "Count",
                        "type": "quantitative",
                        "title": "No. of Players"
                    }
                ]
            }
        }
    ]
}