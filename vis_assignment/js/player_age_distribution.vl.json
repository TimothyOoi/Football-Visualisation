{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/datasets/Big5/2021-2022/stats.csv"
  },
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "params": [
    {
      "name": "legend_selection",
      "select": {
        "type": "point",
        "fields": [
          "Comp"
        ]
      },
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "filter": {
        "param": "legend_selection"
      }
    }
  ],
  "encoding": {
    "x": {
      "bin": {
        "step": 3
      },
      "field": "Age",
      "type": "ordinal",
      "title": "Age"
    },
    "y": {
      "aggregate": "count",
      "title": "No. of Players",
      "axis": {
        "grid": true,
        "zindex": 1,
        "domainColor": "white",
        "tickColor": "white",
        "gridColor": "white"
      }
    },
    "color": {
      "field": "Comp",
      "type": "nominal",
      "scale": {
        "domain": [
          "Bundesliga",
          "La Liga",
          "Ligue 1",
          "Premier League",
          "Serie A"
        ],
        "range": [
          "#e7ba52",
          "#c7c7c7",
          "#aec7e8",
          "#1f77b4",
          "#9467bd"
        ]
      },
      "legend": {
        "orient": "top-right"
      },
      "title": "League"
    }
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}