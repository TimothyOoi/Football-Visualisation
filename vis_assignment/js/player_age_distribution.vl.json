{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/datasets/Big5/2021-2022/stats.csv"
  },
  "params": [
    {
      "name": "Comp_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Bundesliga",
          "La Liga",
          "Ligue 1",
          "Premier League",
          "Serie A"
        ],
        "labels": [
          "All Leagues",
          "Bundesliga",
          "La Liga",
          "Ligue 1",
          "Premier League",
          "Serie A"
        ],
        "name": "League Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Comp == Comp_selection || Comp_selection==null"
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "transform": [
        {
          "filter": {
            "field": "Age",
            "gt": 0
          }
        }
      ],
      "mark": {
        "type": "bar",
        "color": "#eee",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "bin": {
            "step": 3
          },
          "field": "Age",
          "type": "ordinal"
        },
        "opacity": {
          "condition": {
            "test": {
              "param": "hover",
              "empty": false
            },
            "value": 0.5
          },
          "value": 0
        },
        "detail": [
          {
            "aggregate": "count",
            "title": "No. of Players"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "x": {
          "bin": {
            "step": 3
          },
          "field": "Age",
          "type": "ordinal",
          "title": "Age"
        },
        "y": {
          "aggregate": "count",
          "title": "No. of Players",
          "axis": {
            "grid": true,
            "zindex": 1,
            "domainColor": "white",
            "tickColor": "white",
            "gridColor": "white"
          }
        },
        "color": {
          "value": "#1b9e77"
        }
      }
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}