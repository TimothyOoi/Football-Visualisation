{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/datasets/Big5/2021-2022/shooting.csv"
  },
  "params": [
    {
      "name": "pos_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "DF",
          "MF",
          "FW"
        ],
        "labels": [
          "Show All",
          "Defenders",
          "Midfielders",
          "Forwards"
        ],
        "name": "Position Selection: "
      }
    },
    {
      "name": "shots_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 150,
        "step": 1,
        "name": "Shots Taken Above: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "field": "Pos",
        "oneOf": [
          "DF",
          "MF",
          "FW"
        ]
      }
    },
    {
      "filter": "pos_selection == null || datum.Pos == pos_selection"
    },
    {
      "filter": "datum['Standard Sh'] > shots_above"
    },
    {
      "calculate": "{'DF': 'Defender', 'MF': 'Midfielder', 'FW': 'Forward'}[datum.Pos]",
      "as": "PosName"
    }
  ],
  "encoding": {
    "x": {
      "field": "Standard Gls",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          36
        ]
      },
      "title": "Goals Scored"
    },
    "y": {
      "field": "Expected xG",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          36
        ]
      },
      "title": "Expected Goals (xG)"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line"
      },
      "data": {
        "values": [
          {
            "x": -50000,
            "y": -50000
          },
          {
            "x": 50000,
            "y": 50000
          }
        ]
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              36
            ]
          }
        },
        "y": {
          "field": "y",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              36
            ]
          }
        },
        "strokeDash": {
          "value": [
            8,
            8
          ]
        },
        "strokeWidth": {
          "value": 1
        },
        "color": {
          "value": "grey"
        }
      }
    },
    {
      "params": [
        {
          "name": "league_highlight",
          "select": {
            "type": "point",
            "fields": [
              "Comp"
            ]
          },
          "bind": "legend"
        },
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        }
      ],
      "mark": "point",
      "encoding": {
        "color": {
          "field": "Comp",
          "type": "nominal",
          "scale": {
            "domain": [
              "Bundesliga",
              "La Liga",
              "Ligue 1",
              "Premier League",
              "Serie A"
            ],
            "range": [
              "#D3010C",
              "#921e7f",
              "#8B4513",
              "#3d195b",
              "#008fd7"
            ]
          },
          "legend": {
            "orient": "top-left",
            "direction": "vertical",
            "fillColor": "#d1e2ce",
            "strokeColor": "grey",
            "padding": 5
          },
          "title": "League"
        },
        "size": {
          "value": 75
        },
        "opacity": {
          "condition": {
            "selection": "league_highlight",
            "value": 0.7
          },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "Player",
            "type": "nominal"
          },
          {
            "field": "Nation",
            "type": "nominal"
          },
          {
            "field": "Squad",
            "type": "nominal",
            "title": "Team"
          },
          {
            "field": "PosName",
            "type": "nominal",
            "title": "Position"
          },
          {
            "field": "Standard Gls",
            "type": "quantitative",
            "title": "Goals"
          },
          {
            "field": "Expected xG",
            "type": "quantitative",
            "title": "Expected Goals (xG)"
          },
          {
            "field": "Expected G-xG",
            "type": "quantitative",
            "title": "Goals - xG"
          },
          {
            "field": "Standard Sh",
            "type": "quantitative",
            "title": "Shots Taken"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "calculate": "parseInt(datum['Standard Gls'])",
          "as": "Goals Scored"
        },
        {
          "window": [
            {
              "op": "rank",
              "as": "ranking"
            }
          ],
          "sort": [
            {
              "field": "Goals Scored",
              "order": "descending"
            }
          ],
          "groupby": [
            "Comp"
          ]
        },
        {
          "filter": "datum.ranking == 1"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "point",
            "size": 200,
            "shape": "M0,.5L.6,.8L.5,.1L1,-.3L.3,-.4L0,-1L-.3,-.4L-1,-.3L-.5,.1L-.6,.8L0,.5Z"
          },
          "encoding": {
            "color": {
              "field": "Comp",
              "type": "nominal",
              "legend": null
            },
            "opacity": {
              "condition": {
                "selection": "league_highlight",
                "value": 0.7
              },
              "value": 0.2
            }
          }
        },
        {
          "transform": [
            {
              "calculate": "datum.Comp + ' Top Scorer'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "datum.Comp=='Premier League'? 'PL Top Scorer': datum.text_annotation_raw",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "center",
            "dx": 0,
            "dy": -15
          },
          "encoding": {
            "text": {
              "field": "text_annotation",
              "type": "nominal"
            },
            "color": {
              "field": "Comp",
              "type": "nominal"
            },
            "opacity": {
              "condition": {
                "selection": "league_highlight",
                "empty": false,
                "value": 0.7
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [
        {
          "filter": "datum['Expected G-xG']>6.2"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10
      },
      "encoding": {
        "text": {
          "field": "Player",
          "type": "nominal"
        },
        "color": {
          "value": " #004E00"
        },
        "opacity": {
          "condition": {
            "selection": "league_highlight",
            "value": 0.7
          },
          "value": 0.2
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum['Expected G-xG']<-5"
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": -40,
        "dy": -7,
        "angle": 0
      },
      "encoding": {
        "text": {
          "field": "Player",
          "type": "nominal"
        },
        "color": {
          "value": "#773255"
        },
        "opacity": {
          "condition": {
            "selection": "league_highlight",
            "value": 0.7
          },
          "value": 0.2
        }
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 10,
            "y": 34,
            "raw_label": "\"Underperforming\" players; are above the dotted line.; They have fewer goals; scored than their total xG"
          },
          {
            "x": 25,
            "y": 6,
            "raw_label": "\"Overperforming\" players; are below the dotted line.; They have more goals; scored than their total xG"
          }
        ]
      },
      "transform": [
        {
          "calculate": "split(datum.raw_label, ';')",
          "as": "label"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 14,
        "baseline": "bottom"
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative"
        },
        "y": {
          "field": "y",
          "type": "quantitative"
        },
        "text": {
          "field": "label",
          "type": "nominal"
        },
        "color": {
          "condition": {
            "test": "datum.x < 20",
            "value": "#773255"
          },
          "value": "#004E00"
        }
      }
    }
  ],
  "config": {
    "font": "Roboto",
    "background": "#d1e2ce",
    "padding": 10,
    "arc": {
      "fill": "#30a2da"
    },
    "area": {
      "fill": "#30a2da"
    },
    "axis": {
      "domainColor": "#cbcbcb",
      "grid": true,
      "gridColor": "#cbcbcb",
      "gridWidth": 1,
      "labelColor": "#999",
      "labelFontSize": 10,
      "titleColor": "#333",
      "tickColor": "#cbcbcb",
      "tickSize": 10,
      "titleFontSize": 14,
      "titlePadding": 10,
      "labelPadding": 4
    },
    "axisBand": {
      "grid": false
    },
    "group": {
      "fill": "#f0f0f0"
    },
    "legend": {
      "labelColor": "#333",
      "labelFontSize": 11,
      "padding": 1,
      "symbolSize": 30,
      "symbolType": "square",
      "titleColor": "#333",
      "titleFontSize": 14,
      "titlePadding": 10
    },
    "line": {
      "stroke": "#30a2da",
      "strokeWidth": 2
    },
    "path": {
      "stroke": "#30a2da",
      "strokeWidth": 0.5
    },
    "rect": {
      "fill": "#30a2da"
    },
    "range": {
      "category": [
        "#30a2da",
        "#fc4f30",
        "#e5ae38",
        "#6d904f",
        "#8b8b8b",
        "#b96db8",
        "#ff9e27",
        "#56cc60",
        "#52d2ca",
        "#52689e",
        "#545454",
        "#9fe4f8"
      ],
      "diverging": [
        "#cc0020",
        "#e77866",
        "#f6e7e1",
        "#d6e8ed",
        "#91bfd9",
        "#1d78b5"
      ],
      "heatmap": [
        "#d6e8ed",
        "#cee0e5",
        "#91bfd9",
        "#549cc6",
        "#1d78b5"
      ]
    },
    "point": {
      "filled": true,
      "shape": "circle"
    },
    "shape": {
      "stroke": "#30a2da"
    },
    "bar": {
      "binSpacing": 2,
      "fill": "#30a2da",
      "stroke": null
    },
    "title": {
      "anchor": "start",
      "fontSize": 24,
      "fontWeight": 600,
      "offset": 20
    }
  }
}