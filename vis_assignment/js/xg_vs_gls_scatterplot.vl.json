{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": {
    "text": "Expected Goals against Goals Scored for All Outfield Players"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/TimothyOoi/Football-Visualisation/master/datasets/Big5/2021-2022/shooting.csv"
  },
  "params": [
    {
      "name": "pos_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "DF",
          "MF",
          "FW"
        ],
        "labels": [
          "Show All",
          "Defenders",
          "Midfielders",
          "Forwards"
        ],
        "name": "Position Selection: "
      }
    },
    {
      "name": "shots_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 150,
        "step": 1,
        "name": "Shots Taken Above: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "field": "Pos",
        "oneOf": [
          "DF",
          "MF",
          "FW"
        ]
      }
    },
    {
      "filter": "pos_selection == null || datum.Pos == pos_selection"
    },
    {
      "filter": "datum['Standard Sh'] > shots_above"
    },
    {
      "calculate": "{'DF': 'Defender', 'MF': 'Midfielder', 'FW': 'Forward'}[datum.Pos]",
      "as": "PosName"
    }
  ],
  "encoding": {
    "x": {
      "field": "Standard Gls",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          36
        ]
      },
      "title": "Goals Scored"
    },
    "y": {
      "field": "Expected xG",
      "type": "quantitative",
      "scale": {
        "domain": [
          0,
          36
        ]
      },
      "title": "Expected Goals (xG)"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line"
      },
      "data": {
        "values": [
          {
            "x": 0,
            "y": 0
          },
          {
            "x": 36,
            "y": 36
          }
        ]
      },
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              36
            ]
          }
        },
        "y": {
          "field": "y",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              36
            ]
          }
        },
        "strokeDash": {
          "value": [
            8,
            8
          ]
        },
        "strokeWidth": {
          "value": 1
        },
        "color": {
          "value": "grey"
        }
      }
    },
    {
      "mark": "point",
      "encoding": {
        "color": {
          "field": "PosName",
          "type": "nominal",
          "scale": {
            "domain": [
              "Defender",
              "Midfielder",
              "Forward"
            ],
            "range": [
              "#1b9e77",
              "#7570b3",
              "#d95f02"
            ]
          },
          "legend": {
            "orient": "top-left",
            "direction": "vertical",
            "fillColor": "white",
            "strokeColor": "grey",
            "padding": 5
          },
          "title": "Position"
        },
        "shape": {
          "field": "Comp",
          "type": "nominal",
          "legend": {
            "orient": "top-left",
            "columns": 2,
            "fillColor": "white",
            "strokeColor": "grey",
            "padding": 5
          },
          "title": "League"
        },
        "size": {
          "value": 75
        },
        "opacity": {
          "value": 0.7
        },
        "tooltip": [
          {
            "field": "Player",
            "type": "nominal"
          },
          {
            "field": "Nation",
            "type": "nominal"
          },
          {
            "field": "Squad",
            "type": "nominal",
            "title": "Team"
          },
          {
            "field": "PosName",
            "type": "nominal",
            "title": "Position"
          },
          {
            "field": "Standard Gls",
            "type": "quantitative",
            "title": "Goals"
          },
          {
            "field": "Expected xG",
            "type": "quantitative",
            "title": "Expected Goals (xG)"
          },
          {
            "field": "Expected G-xG",
            "type": "quantitative",
            "title": "Goals - xG"
          },
          {
            "field": "Standard Sh",
            "type": "quantitative",
            "title": "Shots Taken"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum['Expected G-xG']>6.2"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5
      },
      "encoding": {
        "text": {
          "field": "Player",
          "type": "nominal"
        },
        "color": {
          "value": " #327754"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum['Expected G-xG']<-6"
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": -15,
        "dy": -10,
        "angle": 0
      },
      "encoding": {
        "text": {
          "field": "Player",
          "type": "nominal"
        },
        "color": {
          "value": "#773255"
        }
      }
    }
  ],
  "config": {
    "font": "Roboto",
    "background": "#f0f0f0",
    "padding": 10,
    "arc": {
      "fill": "#30a2da"
    },
    "area": {
      "fill": "#30a2da"
    },
    "axis": {
      "domainColor": "#cbcbcb",
      "grid": true,
      "gridColor": "#cbcbcb",
      "gridWidth": 1,
      "labelColor": "#999",
      "labelFontSize": 10,
      "titleColor": "#333",
      "tickColor": "#cbcbcb",
      "tickSize": 10,
      "titleFontSize": 14,
      "titlePadding": 10,
      "labelPadding": 4
    },
    "axisBand": {
      "grid": false
    },
    "group": {
      "fill": "#f0f0f0"
    },
    "legend": {
      "labelColor": "#333",
      "labelFontSize": 11,
      "padding": 1,
      "symbolSize": 30,
      "symbolType": "square",
      "titleColor": "#333",
      "titleFontSize": 14,
      "titlePadding": 10
    },
    "line": {
      "stroke": "#30a2da",
      "strokeWidth": 2
    },
    "path": {
      "stroke": "#30a2da",
      "strokeWidth": 0.5
    },
    "rect": {
      "fill": "#30a2da"
    },
    "range": {
      "category": [
        "#30a2da",
        "#fc4f30",
        "#e5ae38",
        "#6d904f",
        "#8b8b8b",
        "#b96db8",
        "#ff9e27",
        "#56cc60",
        "#52d2ca",
        "#52689e",
        "#545454",
        "#9fe4f8"
      ],
      "diverging": [
        "#cc0020",
        "#e77866",
        "#f6e7e1",
        "#d6e8ed",
        "#91bfd9",
        "#1d78b5"
      ],
      "heatmap": [
        "#d6e8ed",
        "#cee0e5",
        "#91bfd9",
        "#549cc6",
        "#1d78b5"
      ]
    },
    "point": {
      "filled": true,
      "shape": "circle"
    },
    "shape": {
      "stroke": "#30a2da"
    },
    "bar": {
      "binSpacing": 2,
      "fill": "#30a2da",
      "stroke": null
    },
    "title": {
      "anchor": "start",
      "fontSize": 24,
      "fontWeight": 600,
      "offset": 20
    }
  }
}